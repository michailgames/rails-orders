<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.date %></td>
        <td><%= order.total %></td>
      </tr>
      <tr><td><ul>        
        <% order.order_lines.each do |order_line| %>
          <li>
            <%= order_line.name %>, <%= order_line.quantity %> x
            <%= order_line.price %> = <%= order_line.subtotal %>
          </li>
        <% end %>
      </ul></td></tr>
    <% end %>
  </tbody>
</table>

<br>
